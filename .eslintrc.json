{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["next.config.js"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "semi": 2,
        "quotes": [2, "single"],
        "jsx-quotes": [2, "prefer-single"]
    }
}
